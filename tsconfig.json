{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "outDir": "./dist",
    "strict": true,
    "strictPropertyInitialization": false,
    "allowJs": true,
    "esModuleInterop": true,

    "emitDecoratorMetadata": true,

    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules", "vitest.config.ts"
  ]
}
