{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./src",                                  
    "paths": {
      "@/*" : ["*"]
    },
    "resolveJsonModule": true,  
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "vitest.config.ts", "**/__test__/*"]
}
